{
  "apps": {
    "ecommerce": {
      "models": {
        "Category": {
          "fields": {
              "title": {
                "type": "character",
                "max_length": 255,
                "unique": true
              },
              "created": {
                "type": "datetime",
                "auto_now_add": true
              },
              "modified": {
                "type": "datetime",
                "auto_now": true
              }
            },
            "admin": {
              "list_display": ["title", "created", "modified"],
              "list_filter": ["created", "modified"],
              "search_fields": ["title"]
            },
            "api": {
              "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"]
            }
          },
          "Product": {
            "fields": {
              "title": {
                "type": "character",
                "max_length": 255
              },
              "description": {
                "type": "character",
                "max_length": 255
              },
              "price": {
                "type": "integer"
              },
              "category": {
                "type": "fk",
                "to": "Category",
                "related_name": "'products'",
                "on_delete": "CASCADE"
              },
              "created": {
                "type": "datetime",
                "auto_now_add": true
              },
              "modified": {
                "type": "datetime",
                "auto_now": true
              }
            },
            "admin": {
              "list_display": ["title", "price", "category"],
              "list_filter": ["created", "modified"],
              "search_fields": ["title", "description"],
              "raw_id_fields": ["category"]
            }
          },
        "Discount": {
          "fields": {
            "product": {
              "type": "fk",
              "to": "Product",
              "related_name": "'discounts'",
              "on_delete": "CASCADE"
            },
            "discount": {
              "type": "integer"
            },
            "created": {
              "type": "datetime",
              "auto_now_add": true
            },
            "modified": {
              "type": "datetime",
              "auto_now": true
            }
          },
          "admin": {
            "list_display": ["discount", "product", "created", "modified"],
            "list_filter": ["created", "modified"],
            "raw_id_fields": ["product"]
          }
        }
      }
    }
  }
}
